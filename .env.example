# ==============================================================================
# Pincer x402 Starter - Environment Configuration Template
# ==============================================================================
# Copy this file to .env and fill in your values

# ------------------------------------------------------------------------------
# Solana Configuration (Primary network)
# ------------------------------------------------------------------------------
SVM_NETWORK=solana:EtWTRABZaYq6iMfeYKouRu166VU2xqa1
SVM_ADDRESS=your_solana_address_here
SVM_PRIVATE_KEY=your_solana_private_key_here
SOLANA_RPC_URL=https://api.devnet.solana.com

# ------------------------------------------------------------------------------
# Pincer Treasury Wallet (for facilitator signing and rebate payouts)
# These keys are used by Pincer to sign x402 payment verifications and settlements
# ------------------------------------------------------------------------------
TREASURY_SVM_ADDRESS=your_treasury_solana_address_here
TREASURY_SVM_PRIVATE_KEY=your_treasury_solana_private_key_here

# Optional: EVM treasury (if you need EVM support)
# TREASURY_EVM_ADDRESS=your_treasury_evm_address_here
# TREASURY_EVM_PRIVATE_KEY=your_treasury_evm_private_key_here
# EVM_RPC_URL=https://sepolia.base.org

# ------------------------------------------------------------------------------
# Service Configuration
# ------------------------------------------------------------------------------
PINCER_HOST=0.0.0.0
PINCER_PORT=4022
PINCER_URL=http://localhost:4022

TOPEATS_HOST=0.0.0.0
TOPEATS_PORT=4021
TOPEATS_URL=http://localhost:4021

MERCHANT_HOST=0.0.0.0
MERCHANT_PORT=4023
MERCHANT_URL=http://localhost:4023

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
WEBHOOK_SECRET=your_secure_webhook_secret_here_change_in_production

# ------------------------------------------------------------------------------
# Database & Logging
# ------------------------------------------------------------------------------
DATABASE_PATH=./pincer.db
LOG_LEVEL=INFO
LOG_FORMAT=json

# ------------------------------------------------------------------------------
# Payment Configuration
# ------------------------------------------------------------------------------
CONTENT_PRICE_USD=0.10

# ------------------------------------------------------------------------------
# Sponsor Campaign (MVP defaults)
# ------------------------------------------------------------------------------
SPONSOR_CAMPAIGN_ID=shake-shack-promo
SPONSOR_MERCHANT_NAME=Shake Shack
SPONSOR_OFFER_TEXT=Get $5.00 cashback on your first order
SPONSOR_REBATE_AMOUNT_USD=5.00
SPONSOR_TOTAL_BUDGET_USD=100.00
